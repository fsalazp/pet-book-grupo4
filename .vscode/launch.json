  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jasmine Individual Test",
      "program": "${workspaceRoot}\\node_modules\\jasmine\\bin\\jasmine.js",
      "args": [
        "spec\\todoSpec.js"
      ],
      "env": {
        "NODE_PATH": "."
      }
    }
  ]
}
